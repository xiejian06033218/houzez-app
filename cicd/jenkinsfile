pipeline {

  agent any 
    //{
    // docker {
    // image 'node:16.17.0'
    //}
    //}
  environment {
    S3bucket_name = 'houzez.app'
  }
  stages {
    stage('Sonar Cloud') {
      environment {
        SCANNER_HOME = tool 'sonarqubescanner_houzez_app_jenkins'
        SONAR_TOKEN = credentials('sonar_jenkins_houzez_frontend_pipeline')
        ORGANIZATION = "houzezp3project"
        PROJECT_NAME = "houzez-app"
      }

      steps {
        withSonarQubeEnv(installationName: 'sonarqubescanner_houzez_app_jenkins', credentialsId: 'sonar_jenkins_houzez_frontend_pipeline') {
            sh '''$SCANNER_HOME/bin/sonar-scanner \
            -Dsonar.organization=houzezp3project \
            -Dsonar.projectKey=zhangrunqing6599_houzez-app \
            -Dsonar.sources=. \
            -Dsonar.host.url=https://sonarcloud.io'''
        }
      }
    stage("Quality Gate") {
      steps {
        timeout(time: 1, unit: 'MINUTES') {
            waitForQualityGate webhookSecretId: 'sonar_jenkins_houzez_frontend_pipeline'
        }
      } 
    }
    stage('Install Packages') {
      steps {
        sh 'npm install'
      }
    }
    stage('build') {
      steps {
        sh 'echo "building ..."'
        sh 'npm run build'
      }
    }
    stage('Test') {
      steps {
        sh 'echo "Testing ..."'
        // sh 'npm run test...'
      }
    }
    stage('Upload') {
        steps {
            echo 'Deploying to AWS s3 bucket.'
            withAWS(region:'ap-southeast-2',credentials:'houzez_app') {
                sh 'aws s3 sync /var/lib/jenkins/workspace/houzez_app_frontend_cicid s3://houzez.app/ --exclude "node_modules/*"'
                // s3Delete(bucket:"houzez.app", path:'');
                // s3Upload(bucket:"houzez.app", includePathPattern:'**/*');
            }
        };
    }
  }    
}
