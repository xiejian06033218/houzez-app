pipeline {
  agent {
    docker {
      image 'node:16.17'
    }
  }
  environment {
    S3bucket_name = 's3://houzez.app'
  }
  stages {
    stage('Install Packages') {
      steps {
        sh 'npm install'
      }
    }
    stage('build') {
      steps {
        echo "building ..."
        sh 'npm run build'
      }
    }
    stage('Test') {
      steps {
        sh 'echo "Testing ..."'
        // sh 'npm run test...'
      }
    }
    stage('Deploy to S3') {
      steps {
        echo 'Deploying to AWS s3 bucket.'
        // withAWS(region:'<ap-southeast-2c>', credentials:'') {
        //s3Delete(bucket: '<houzez.app>', path:'**/*')
        //s3Upload(bucket: '<houzez.app>', includePathPattern:'**/*')
      }
    }
  }    
}