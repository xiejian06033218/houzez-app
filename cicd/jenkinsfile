pipeline {
  
  agent any
  tools {nodejs "node16.17"}

  stages {
    stage('Install Packages') {
      steps {
        sh 'npm install'
      }
    }
    stage('build') {
      steps {
        echo "building ..."
        sh 'npm run build'
      }
    }
    stage('Test') {
      steps {
        sh 'echo "Testing ..."'
        // sh 'npm run test...'
      }
    }
    stage('Upload') {
        steps {
            echo 'Deploying to AWS s3 bucket.'
            withAWS(region:'ap-southeast-2',credentials:'houzez_app') {
                s3Delete(bucket:"houzez.app", path:'');
                s3Upload(bucket:"houzez.app", workingDir:'dist', includePathPattern:'**/*');
            }
        };
    }
  }    
}